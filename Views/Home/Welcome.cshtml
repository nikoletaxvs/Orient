                        @if (ViewBag.msCompletions > 0)
                        {   
                            @if (ViewBag.softwareEngineeringAttempts == 0)
                            {
                                <i class="fi fi-br-transporter-empty col-3"></i>
                            }
                            else if (ViewBag.seMean > 5)
                            {
