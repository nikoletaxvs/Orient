<div class="container py-3" >
    <h1  id="courses" name="courses" class=" mb-4 p-4 text-center fw-bold" style="color:#3A3B3C">Career Courses</h1>
</div>

<div class="container">
    <div class="card-group p-1">
        <!-- Machine Learning Engineer Card -->
        <div class="card mx-3">
            <div class="card-header">
                <div class="container">
                    <div class="row">

                        <div class="col">
                            <i class="fi fi-br-time-past"></i><span class="small p-1 mb-2">@ViewBag.msAttempts</span>
                        </div>
                             
                        @if (ViewBag.msAttempts > 0)
                        {
                            @if(ViewBag.msMean > 5)
                            {
                                <i class="fi fi-rr-face-awesome col-3"></i>

                            }
                            else
                            {
                                <i class="fi fi-rr-face-disappointed col-3"></i>
                            }
                            
                        }
                       


                    </div>
                </div>
            </div>
            <img src="/lib/icons/ai.jpg" class="card-img-top" alt="ai" style="filter:brightness(0.5);">
            <div class="card-body">
                <h5 class="card-title fw-bold" style="color:#3A3B3C">Machine Learning</h5>
                <p class="card-text text-secondary">Machine Learning is an AI technique that teaches computers to learn from experience. </p>
                 
               
            </div>
            <div class="d-grid gap-2">
                <a asp-controller="home" asp-action="MachineLearning" class="btn btn-warning shadow-sm fw-bold p-3" style="color:#3A3B3C">Explore Path</a>
            </div>
           
        </div>
        <!-- Software Engineer Card -->
